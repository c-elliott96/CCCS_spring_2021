
#########################################################################################
##																					   ##
##	text Segment																	   ##
##																					   ##
#########################################################################################
.text

main:
    li $t1,0
    la $a0,message
	li $v0, 4
	syscall

	li $v0, 8 #input
	la $a0, buffer
	li $a1, 20
	move $t0, $a0
	syscall

loop:
    lb   $a0,0($t0)
    beqz $a0,done
    addi $t0,$t0,1
    addi $t1,$t1,1
    j     loop
done:

    li   $v0,1
	li 	 $t2, -1
    add  $a0, $t2, $t1
    syscall

    li   $v0,10
    syscall
	
#########################################################################################
##																					   ##
##	data Segment																	   ##
##																					   ##
#########################################################################################
.data
    message: .asciiz "Enter string: "
	buffer: .space 20